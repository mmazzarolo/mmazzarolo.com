{
  "name": "mmazzarolo",
  "private": true,
  "description": "Matteo's personal website",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "gatsby build",
    "develop": "gatsby develop",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "start": "npm run develop",
    "serve": "gatsby serve",
    "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing \"",
    "lint": "eslint 'src/' --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "yarn lint --fix"
  },
  "dependencies": {
    "babel-plugin-styled-components": "^1.11.1",
    "gatsby": "^2.24.66",
    "gatsby-image": "^2.4.20",
    "gatsby-plugin-feed": "^2.5.13",
    "gatsby-plugin-meta-redirect": "^1.1.1",
    "gatsby-plugin-react-helmet": "^3.3.12",
    "gatsby-plugin-robots-txt": "^1.5.3",
    "gatsby-plugin-sharp": "^2.6.37",
    "gatsby-plugin-sitemap": "^2.4.14",
    "gatsby-plugin-styled-components": "^3.3.12",
    "gatsby-redirect-from": "^0.2.4",
    "gatsby-remark-copy-linked-files": "^2.3.17",
    "gatsby-remark-embed-gist": "^1.2.1",
    "gatsby-remark-embed-video": "^3.0.10",
    "gatsby-remark-external-links": "^0.0.4",
    "gatsby-remark-images": "^3.3.31",
    "gatsby-remark-prismjs": "^3.5.14",
    "gatsby-remark-responsive-iframe": "^2.4.15",
    "gatsby-remark-smartypants": "^2.3.12",
    "gatsby-source-filesystem": "^2.3.31",
    "gatsby-transformer-remark": "^2.8.36",
    "gatsby-transformer-sharp": "^2.5.16",
    "lodash": "^4.17.20",
    "prismjs": "^1.23.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.1.0",
    "styled-components": "^5.2.0",
    "styled-normalize": "^8.0.7"
  },
  "devDependencies": {
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react-app": "^6.2.2",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
